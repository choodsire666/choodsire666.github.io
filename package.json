{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "hexo generate",
    "clean": "hexo clean",
    "sync:bili": "hexo bangumi -u",
    "sync:post": "elog sync",
    "sync:algolia": "hexo g && hexo algolia",
    "sync:local": "elog sync -e .elog.env",
    "publish": "npm run clean && npm run deploy",
    "server": "hexo server",
    "clean:all": "hexo clean && elog clean",
    "sync:all": "elog sync -e .elog.env && hexo g && hexo algolia && hexo bangumi -u"
  },
  "hexo": {
    "version": "7.2.0"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@elog/cli": "^0.14.0",
    "bluebird": "^3.7.2",
    "chokidar": "^3.6.0",
    "graceful-fs": "^4.2.11",
    "hexo": "^7.0.0",
    "hexo-algoliasearch": "^2.0.1",
    "hexo-bilibili-bangumi": "^1.10.3",
    "hexo-butterfly-envelope": "^1.0.15",
    "hexo-deployer-git": "^4.0.0",
    "hexo-fs": "^4.1.3",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-index": "^3.0.0",
    "hexo-generator-tag": "^2.0.0",
    "hexo-log": "^4.1.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^6.0.0",
    "hexo-renderer-pug": "^3.0.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "hexo-theme-landscape": "^1.0.0",
    "hexo-util": "^3.3.0",
    "hexo-wordcount": "^6.0.1",
    "picocolors": "^1.0.1",
    "pug": "^3.0.3",
    "save-dev": "0.0.1-security",
    "yuque-tools": "^2.3.4"
  },
  "yuqueConfig": {
    "postPath": "source/_posts/yuque",
    "cachePath": "yuque.json",
    "mdNameFormat": "title",
    "adapter": "hexo",
    "concurrency": 5,
    "baseUrl": "https://www.yuque.com/api/v2",
    "login": "chood",
    "repo": "blog",
    "onlyPublished": false
  },
  "devDependencies": {
    "yuque-hexo": "^1.9.5"
  }
}